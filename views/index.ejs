        <!-- Instagram feed. The server program pulls the list of ARM Instagram pages and passes them to the JS below. -->
        <div class="section container">
            <h1 class="text-center">
                <a target="_blank"  class="instagram-header" href="http://www.instagram.com/aaronroeckmagic">
                    <i class="fab fa-instagram"></i>
                    <span id="href-instagram"></span>Instagram Feed
                </a>
            </h1>
            <p class="text-center">
                <a target="_blank" class="instagram-header" href="http://www.instagram.com/aaronroeckmagic">Follow AaronRoeckMagic on Instagram</a>
            </p>

            <div class="album">
                <div class="container">
                    
                    <!-- The first 9 Instagram pages are shown.  -->
                    <div class="row">
                        <% for (var i = 0; i < Math.min(12, instagramFeed.length); i++) { %>
                            <div class="col-md-4 col-sm-6 col-6">
                                <div class="card mb-4 box-shadow">
                                    <a target="_blank" href="http://www.instagram.com/p/<%= instagramFeed[i].shortCode %>">
                                        <img class="card-img-top shadow rounded" src="<%= instagramFeed[i].imageURL %>" alt="Instagram image">
                                    </a>
                                </div>
                            </div>
                        <% } %>
                    </div>

                    <!-- The remaining Instagram pages start collapsed and are shown by clicking a button. -->
                    <% if (instagramFeed.length > 12) { %>
                        <div class="row collapse" id="instagramMore">
                            <% for (var i = 12; i < instagramFeed.length; i++) { %>
                                <div class="col-md-4 col-sm-6 col-6">
                                    <div class="card mb-4 box-shadow">
                                        <a target="_blank" href="http://www.instagram.com/p/<%= instagramFeed[i].shortCode %>">
                                            <img class="card-img-top shadow rounded" src="<%= instagramFeed[i].imageURL %>" alt="Instagram image">
                                        </a>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% } %>

                    <button class="btn btn-primary btn-block shadow" id="instagramMoreBtn" type="button" data-toggle="collapse" data-target="#instagramMore" aria-expanded="false" aria-controls="instagramMore">Show More</button>
                    
                </div>
            </div>
        
        </div>



        <!-- Contact form. -->
        <div class="section bg-blue shadow">
            <div class="container">
                <h1 class="text-center">
                    <span id="href-contact"></span>Contact</h1>
                <p class="text-center">Email: info@aaronroeck.com
                    <br>Tel: 519-998-7346</p>

                <div class="row">

                        <!-- These attributes specify how the information is sent to the server. -->
                        <form action="/" method="POST">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input class="form-control" type="text" name="name" placeholder="Name">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="text" name="email" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="text" name="phone" placeholder="Phone">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <textarea class="form-control" type="text" name="message" placeholder="Message" rows="5"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-lg btn-dark btn-default btn-block shadow">Send</button>
                            </div>

                        </form>
                
                </div>
            </div>
